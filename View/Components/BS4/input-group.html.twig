{#
/**
* @file input-group.html.twig
*
* Default theme implementation to display a Bootstrap Input Group component.
*
* @var id:          Your id
* @var name:        Your name
* @var class:       Your class
* @var position:    prepend, append or both
* @var texts:       Your texts, in order for respective input-group
*
* How to use it:
*       {% include "Components/BS4/input-group.html.twig" with {id:'myInputButtonId', name:'myInputButtonName', class: '', position: 'left', texts: ['Text1', 'Text2']} %}
*       {% include "Components/BS4/input-group.html.twig" with {id:'myInputButtonId', name:'myInputButtonName', class: '', position: 'right', texts: ['Text1', 'Text2']} %}
*       {% include "Components/BS4/input-group.html.twig" with {id:'myInputButtonId', name:'myInputButtonName', class: '', position: 'both', texts: ['Text1', 'Text2', 'Text3']} %}
*/
#}

<div class="input-group{% if class is defined %} {{ class }}{% endif %}">
    {% if position == 'prepend' %}
        <div class="input-group-prepend">
            <span class="input-group-text" id="addon_{{ id }}">
                {% if texts[0] is defined %}
                    {{ texts[0] | raw }}
                {% endif %}
            </span>
        </div>
        <input{% if id is defined %} id="{{ id }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %}
                type="text" class="form-control"
                {% if texts[1] is defined %} placeholder="{{ texts[1] | raw }}"{% endif %}
                {% if id is defined %} aria-describedby="addon_{{ id }}"{% endif %}>
    {% elseif position == 'append' %}
        <input{% if id is defined %} id="{{ id }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %}
                type="text"
                class="form-control"
                {% if texts[0] is defined %} placeholder="{{ texts[0] | raw }}"{% endif %}
                {% if id is defined %} aria-describedby="addon_{{ id }}"{% endif %}>
        <div class="input-group-append">
            <span class="input-group-text" id="addon_{{ id }}">
                {% if texts[1] is defined %}
                    {{ texts[1] | raw }}
                {% endif %}
            </span>
        </div>
    {% elseif position == 'both' %}
        <div class="input-group-prepend">
            <span class="input-group-text">
                {% if texts[0] is defined %}
                    {{ texts[0] | raw }}
                {% endif %}
            </span>
        </div>
        <input{% if id is defined %} id="{{ id }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %}
                type="text" class="form-control"
                {% if texts[1] is defined %} aria-label="{{ texts[1] | raw }}"{% endif %}>
        <div class="input-group-append">
            <span class="input-group-text">
                {% if texts[2] is defined %}
                    {{ texts[2] | raw }}
                {% endif %}
            </span>
        </div>
    {% else %}
        Something is wrong with your code!
    {% endif %}
</div>